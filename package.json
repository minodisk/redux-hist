{
  "name": "redux-hist",
  "version": "0.0.12",
  "description":
    "Middlewares / Actions / Reducers / Router for Redux around History API.",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": ["lib"],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "format":
      "./node_modules/.bin/prettier --write {./*.json,./{src,text}/*.ts} && ./node_modules/.bin/tslint --fix ./{src,test}/*.ts",
    "lint":
      "./node_modules/.bin/prettier -l {./*.json,./{src,text}/*.ts} && ./node_modules/.bin/tslint ./{src,test}/*.ts",
    "build": "./node_modules/.bin/tsc -p .",
    "pretest": "rm -rf .build && ./node_modules/.bin/tsc -p tsconfig.test.json",
    "test": "./node_modules/.bin/jest",
    "posttest":
      "if [ \"$CI\" = \"true\" ]; then npm run reportcov; fi || rm -rf .build",
    "reportcov": "codecov -f coverage/*.json"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "jest": {
    "testMatch": ["**/.build/test/*.js"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/minodisk/redux-hist.git"
  },
  "keywords": ["history", "location", "redux", "route", "router", "routing"],
  "author": "Daisuke Mino",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/minodisk/redux-hist/issues"
  },
  "homepage": "https://github.com/minodisk/redux-hist#readme",
  "dependencies": {
    "path-to-regexp": "^1.7.0",
    "redux-actions": "^2.2.1"
  },
  "devDependencies": {
    "@types/history": "^4.6.0",
    "@types/jest": "^21.1.5",
    "@types/redux-actions": "^1.2.6",
    "codecov": "^2.2.0",
    "history": "^4.6.3",
    "jest": "^21.2.1",
    "prettier": "^1.7.4",
    "redux": "^3.7.2",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.5.3"
  }
}
